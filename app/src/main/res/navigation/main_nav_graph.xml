<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_nav_graph"
	app:startDestination="@+id/navigation_welcome">

	<fragment
		android:id="@+id/navigation_welcome"
		android:name="com.ibracero.retrum.ui.account.welcome.WelcomeFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_welcome">
		<action
			android:id="@+id/action_sign_in_with_email"
			app:destination="@id/navigation_login_with_email"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:launchSingleTop="true"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
		<action
			android:id="@+id/action_sign_in_success"
			app:destination="@id/navigation_retro_list"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
	</fragment>

	<fragment
		android:id="@+id/navigation_login_with_email"
		android:name="com.ibracero.retrum.ui.account.login.LoginFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_login_email" />

	<fragment
		android:id="@+id/navigation_retro_list"
		android:name="com.ibracero.retrum.ui.retros.RetroListFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_retro_list">
		<action
			android:id="@+id/action_retro_clicked"
			app:destination="@id/navigation_container"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
	</fragment>

	<fragment
		android:id="@+id/navigation_container"
		android:name="com.ibracero.retrum.ui.board.BoardFragment"
		tools:layout="@layout/fragment_board">
		<argument
			android:name="arg_retro_uuid"
			app:argType="string" />
		<deepLink
			android:id="@+id/deepLink"
			app:uri="https://retrum.app/join/{arg_retro_uuid}" />
	</fragment>

</navigation>