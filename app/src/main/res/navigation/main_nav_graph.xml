<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_nav_graph"
	app:startDestination="@+id/navigation_login">

	<fragment
		android:id="@+id/navigation_login"
		android:name="com.ibracero.retrum.ui.login.LoginFragment"
		android:label="@string/app_name"
		tools:layout="">
		<action
			android:id="@+id/action_sign_in"
			app:destination="@id/navigation_retro_list"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
	</fragment>

	<fragment
		android:id="@+id/navigation_retro_list"
		android:name="com.ibracero.retrum.ui.retros.RetroListFragment"
		android:label="@string/app_name"
		tools:layout="@layout/fragment_retro_list">
		<action
			android:id="@+id/action_retro_clicked"
			app:destination="@id/navigation_container"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim" />
	</fragment>

	<fragment
		android:id="@+id/navigation_container"
		android:name="com.ibracero.retrum.ui.board.BoardFragment"
		tools:layout="@layout/fragment_board">
		<argument
			android:name="arg_retro"
			app:argType="com.ibracero.retrum.data.local.Retro" />
	</fragment>

</navigation>