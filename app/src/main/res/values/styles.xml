<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fontFamily">@font/font_raleway</item>
		<item name="android:windowBackground">@color/colorPrimary</item>
		<item name="buttonStyle">@style/DarkButton</item>
	</style>

	<style name="DarkButton" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/dark_button_selector</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/primaryTextColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:drawablePadding">16dp</item>
	</style>

</resources>
