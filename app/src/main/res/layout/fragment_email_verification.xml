<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/title_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingStart="42dp"
		android:paddingEnd="42dp"
		android:text="Please, check your inbox. For safety reasons, we just sent you an email with a verification link"
		android:textColor="@color/primaryTextColor"
		app:layout_constraintBottom_toTopOf="@id/email_icon"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />

	<ImageView
		android:id="@+id/email_icon"
		android:layout_width="128dp"
		android:layout_height="128dp"
		android:layout_marginTop="48dp"
		app:layout_constraintBottom_toTopOf="@id/email_not_received_label"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title_label"
		app:srcCompat="@drawable/ic_email" />

	<TextView
		android:id="@+id/email_not_received_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="48dp"
		android:gravity="center"
		android:paddingStart="42dp"
		android:paddingEnd="42dp"
		android:text="Didn't receive it?"
		android:textColor="@color/primaryTextColor"
		app:layout_constraintBottom_toTopOf="@id/resend_button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/email_icon" />

	<Button
		android:id="@+id/resend_button"
		style="@style/DarkButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="42dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="42dp"
		android:text="Resend verification email"
		android:textAlignment="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/email_not_received_label" />


</androidx.constraintlayout.widget.ConstraintLayout>